<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/index.css")
    @Styles.Render("~/Content/font-awesome/css/all.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   <header>
    <div class="container-fluid bg-primary">
      <div class="container d-flex justify-content-end p-2">
          <a class="btn btn-outline-danger bg-light text-danger py-1" href="@Url.Action("Login","Login")">Login</a>
      </div>
    </div>
    <div class="container-fluid clearfix d-flex justify-content-center">
        <div class="logo-web " ><a  href="#"><img src="Image\Logo School.png" class="w-100"></a></div>
    </div>

    <nav class="navbar sticky-top navbar-expand-lg bg-primary p-0" >
  <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
      <div class="collapse navbar-collapse" id="navbarScroll">
        <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", new {@class = "nav-link menu-item active text-white " })
            </li>
          <li class="nav-item dropdown">
            <a class="nav-link menu-item text-white  dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Categoris
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
              <li><a class="dropdown-item" href="#">Action</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
          </li>
          <li class="nav-item">
              @Html.ActionLink("About", "About", "Home", new { @class = "nav-link menu-item active text-white " })
          </li>
          <li class="nav-item">
              @Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link menu-item active text-white " })
          </li>
          <li class="nav-item">
            <a class="nav-link menu-item text-white " href="#">Policy</a>
          </li>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-primary bg-success" type="submit" >Search</button>
        </form>
      </div>
  </div>
</nav>
</header>

    <content>
        @RenderBody()
    </content>

    <footer>
